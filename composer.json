{
	"name": "paveldanilin/request-body-bundle",
	"type": "symfony-bundle",
	"description": "Symfony RequestBody Bundle",
	"keywords": [
		"request-body",
		"symfony",
		"bundle"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Pavel Danilin",
			"email": "pavel.k.danilin@gmail.com"
		}
	],
	"require": {
		"php": ">=7.2",
		"ext-json": "*",
		"symfony/flex": "^1.0",
		"symfony/config": "^4.4|^5.0",
		"symfony/framework-bundle": "^4.4|^5.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^0.12",
		"doctrine/annotations": "^1.0",
		"symfony/validator": "^4.4|^5.0",
		"symfony/serializer": "^4.4|^5.0"
	},
	"autoload": {
		"psr-4": {
			"paveldanilin\\RequestBodyBundle\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"paveldanilin\\RequestBodyBundle\\Tests\\": "tests"
		}
	},
	"config": {
		"preferred-install": "dist",
		"sort-packages": true
	},
	"scripts": {
		"post-update-cmd": ["@bundle:clean"],
		"bundle:clean": [
			"php ci/rmdir.php ./config",
			"php ci/rmdir.php ./public",
			"php ci/rmdir.php ./src/Controller",
			"php ci/rm.php ./src/Kernel.php y",
			"php ci/rm.php ./.env y"
		],
		"auto-scripts": {
			"cache:clear": "symfony-cmd",
			"assets:install %PUBLIC_DIR%": "symfony-cmd"
		},
		"test": [
			"php -d memory_limit=4G ./vendor/bin/phpstan analyse -c phpstan.neon"
		]
	}
}
